<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17" fx:controller="ControllerAbrirFecharCaixa">
    <stylesheets>
        <URL value="@/View/CSS/abrirfecharcaixa.css" />
    </stylesheets>
   <children>
      <Button fx:id="btnAbrirCaixa" layoutX="40.0" layoutY="25.0" mnemonicParsing="false" onAction="#abrirCaixa" prefHeight="69.0" prefWidth="132.0" text="Abrir Caixa" />
      <Button fx:id="btnFecharCaixa" layoutX="439.0" layoutY="25.0" mnemonicParsing="false" onAction="#fecharCaixa" prefHeight="69.0" prefWidth="132.0" text="Fechar Caixa" />
      <Label layoutX="257.0" layoutY="15.0" prefHeight="90.0" prefWidth="86.0" text="Caixa">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <TableView fx:id="tbvwItensCaixa" layoutX="40.0" layoutY="157.0" prefHeight="222.0" prefWidth="534.0">
        <columns>
          <TableColumn fx:id="tbclnDescricao" prefWidth="136.0" text="Descrição do Item" />
          <TableColumn fx:id="tbclnValor" prefWidth="190.0" text="Valor do Item" />
            <TableColumn fx:id="tbclnData" prefWidth="190.0" text="Data do Item" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Label fx:id="lblTitulo" alignment="CENTER" contentDisplay="CENTER" layoutY="115.0" prefHeight="17.0" prefWidth="600.0" text="Já existe um caixa aberto ou não existe um caixa aberto!">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
